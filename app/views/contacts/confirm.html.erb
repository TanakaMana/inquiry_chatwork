<div class="container">
  <div class="page-header">
    <h1>お問い合わせフォーム(確認)</h1>
  </div>
  <%= form_for @contact, url: :complete_contacts do |f| %>
    <table class="table">
      <tr>
        <th>名前</th>
        <td>
          <%= f.hidden_field :family_name %>
          <%= @contact.family_name %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @contact.email %>
        </td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td>
          <%= f.hidden_field :phone_number %>
          <%= @contact.phone_number %>
        </td>
      </tr>
      <tr>
        <th>問い合わせ内容</th>
        <td>
          <%= f.hidden_field :free_field %>
          <%= @contact.free_field %>
        </td>
      </tr>
    </table>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
</div>

